{
  "name": "@robbinapp/ui-kit-web",
  "version": "3.1.0",
  "main": "./build/index.js",
  "module": "./build/index.es.js",
  "description": "Robbin Ui Kit Web",
  "repository": "git@github.com:Robbin-App/ui-kit-web.git",
  "author": "Jose Guerrero <jose@robbin.app>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage=true",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public",
    "commit": "npx git-cz",
    "lint": "eslint 'src/**/*.{js,ts,tsx,jsx}'",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx,jsx}' --fix",
    "build": "rollup -c",
    "chromatic": "chromatic --exit-zero-on-changes"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react-loader-spinner": "^4.0.0",
    "react-scripts": "^4.0.3",
    "react-select": "^4.3.1",
    "rollup-plugin-import-css": "^2.0.1",
    "typescript": "4.2.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-components": "^5.3.0",
    "styled-normalize": "^8.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@robbinapp/eslint-config": "1.0.0",
    "@robbinapp/prettier-config": "^1.0.1",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "@storybook/theming": "^6.2.9",
    "@types/react-select": "^4.0.15",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chromatic": "^5.9.0",
    "eslint": "7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.50.6",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "semantic-release": "^17.4.3",
    "styled-components": "^5.3.0",
    "styled-normalize": "^8.0.7"
  },
  "eslintConfig": {
    "extends": "@robbinapp/eslint-config",
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "prettier": "@robbinapp/prettier-config"
}
